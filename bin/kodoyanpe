require 'kodoyanpe'
require 'mixlib/cli'

class MyCLI
  include Mixlib::CLI
  
  banner "Kodoyanpe builds Chef-full packages for Solaris"
  
  option :help,
  :short        => "-h",
  :long         => "--help",
  :description  => "Show this message",
  :on           => :tail,
  :boolean      => true
  
  option :arch,
  :short => "-a ARCHITECTURE",
  :long => "--arch ARCHITECTURE",
  :required => "true",
  :description => "Architecture to use - SPARC or x86"
  
  def run(argv=ARGV)
    begin
      parse_options
    rescue OptionParser::MissingArgument, OptionParser::InvalidOption => e
      puts "#{e}\n"
      puts "Please run with --help or with no arguments for assistance."
    end
  end
  
  provisioner = Provisioner.new
  puts provisioner
end

cli = MyCLI.new
cli.run

